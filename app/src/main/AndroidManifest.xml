            android:label="Media/VideoView" >
        </activity>
        <activity
            android:name=".VitamioDemo.MediaPlayerDemo_Video"
            android:label="Media/MediaPlayer" >
        </activity>
        <activity
            android:name=".VitamioDemo.MediaPlayerDemo_Audio"
            android:label="Media/MediaPlayer" >
