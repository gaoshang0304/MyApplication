        <activity
            android:name=".ui.activity.TestWXActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!--Animation-->
        <activity
            android:name=".ui.activity.AnimActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
